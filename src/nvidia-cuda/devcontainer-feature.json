{
    "id": "nvidia-cuda",
    "version": "1.0.0",
    "name": "NVIDIA CUDA",
    "documentationURL": "https://github.com/zbirge/devcontainer-feature-cuda/tree/main/src/nvidia-cuda",
    "description": "Installs shared libraries for NVIDIA CUDA. Supports multiple Debian and Ubuntu versions with automatic OS detection.",
    "options": {
        "cudaVersion": {
            "type": "string",
            "proposals": [
                "12.6",
                "12.5",
                "12.4",
                "12.3",
                "12.2",
                "12.1",
                "12.0",
                "11.8",
                "11.7",
                "11.6",
                "11.5",
                "11.4",
                "11.3",
                "11.2"
            ],
            "default": "12.6",
            "description": "CUDA version to install"
        },
        "cudnnVersion": {
            "type": "string",
            "proposals": [
                "automatic",
                "9.5.1.17",
                "9.4.0.58",
                "9.3.0.75",
                "9.2.1.18",
                "9.1.0.70",
                "9.0.0.312",
                "8.9.7.29",
                "8.9.6.50",
                "8.9.5.30",
                "8.9.4.25",
                "8.9.3.28",
                "8.9.2.26",
                "8.9.1.23",
                "8.9.0.131",
                "8.8.1.3",
                "8.8.0.121",
                "8.7.0.84",
                "8.6.0.163",
                "8.5.0.96",
                "8.4.1.50",
                "8.4.0.27",
                "8.3.3.40",
                "8.3.2.44",
                "8.3.1.22",
                "8.2.4.15",
                "8.2.2.26",
                "8.2.1.32",
                "8.2.0.53",
                "8.1.1.33",
                "8.1.0.77"
            ],
            "default": "automatic",
            "description": "cuDNN version to install (if installCudnn is true). Use 'automatic' to select a compatible version."
        },
        "installCudnn": {
            "type": "boolean",
            "default": false,
            "description": "Additionally install CUDA Deep Neural Network (cuDNN) shared library"
        },
        "installCudnnDev": {
            "type": "boolean",
            "default": false,
            "description": "Additionally install cuDNN development libraries and headers (implies installCudnn)"
        },
        "installNvtx": {
            "type": "boolean",
            "default": false,
            "description": "Additionally install NVIDIA Tools Extension (NVTX)"
        },
        "installToolkit": {
            "type": "boolean",
            "default": false,
            "description": "Additionally install NVIDIA CUDA Toolkit"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "customizations": {
        "vscode": {
            "extensions": [],
            "settings": {}
        }
    }
}
